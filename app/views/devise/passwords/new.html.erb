<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="user-forgot-pwd">
    <h2>Forgot your password?</h2>
  
    <div class="form-group">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control", placeholder: "Email address" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-sm btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<div class="forgot-links">
  <%= render "devise/shared/links" %>
</div>