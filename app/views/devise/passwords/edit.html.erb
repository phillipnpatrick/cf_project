<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <h2>Change your password</h2>

  <div class="form-group">
    <%= f.label :password, "New password", class: "sr-only" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "form-control", placeholder: "New password" %>
    <% if @minimum_password_length %>
      <em class="user-password"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm new password", class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control", placeholder: "Confirm new password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-sm btn-primary btn-block" %>
  </div>
<% end %>

<div class="user-links">
  <%= render "devise/shared/links" %>
</div>