<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <h2>Resend unlock instructions</h2>
  
  <div class="form-group">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: "btn btn-sm btn-primary btn-block" %>
  </div>
<% end %>

<div class="user-links">
  <%= render "devise/shared/links" %>
</div>