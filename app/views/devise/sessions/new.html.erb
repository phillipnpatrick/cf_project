<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control", placeholder: "Email address" %>
  </div>

  <div class="fform-groupield">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "current-password", required: true, class: "form-control", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "user-remember-me" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<div class="user-links">
  <%= render "devise/shared/links" %>
</div>