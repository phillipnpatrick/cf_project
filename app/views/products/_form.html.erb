    <%= form.label :description, class: "product-label" %>
    <%= form.text_area :description, class: "form-control product-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image_url, class: "product-label" %>
    <%= form.text_field :image_url, class: "form-control product-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, class: "product-label" %>
    <%= form.text_field :price, class: "form-control product-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Product", class: "btn btn-sm btn-primary" %>
  </div>
