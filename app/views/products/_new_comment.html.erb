<% if signed_in? %>
    <hr>
    
    <h4>Add a review:</h4>
    
    <%= form_for([@product, @product.comments.build]) do |f| %>
        <div class="form-group">
          <%= f.label :body, "Comments:", class: "comment-lbl" %>
          <%= f.text_area :body, class: "form-control", placeholder:"Type your comments here..." %>
        </div>
        
        <div class="form-group">
            <!--<div class="rating"></div>-->
            <%= f.label :rating, "Rating:", class: "comment-lbl" %>
            <%= f.text_field :rating, class: "rating rating-text" %>
        </div>
        
        <div class="actions">
            <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
        </div>
    <% end %>
    
<% end %>