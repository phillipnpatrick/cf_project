<% if user_signed_in? %>
    <div id="comment_form">
        <hr>
        
        <h4>Add a review:</h4>
        
        <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
            <div class="form-group">
              <%= f.label :body, "Comments:", class: "comment-lbl" %>
              <%= f.text_area :body, class: "form-control", placeholder:"Type your comments here..." %>
            </div>
            
            <div class="form-group">
                <div class="rating"></div>
            </div>
            
            <div class="actions">
                <%= f.submit "Submit", class: "btn btn-sm btn-primary" %>
            </div>
        <% end %>
    </div>
<% end %>